<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/nen"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <include
        android:id="@+id/header"
        layout="@layout/layout_toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/nen"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/layout_play_all"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_margin="@dimen/define_dimen_10"
                android:layout_height="@dimen/define_dimen_130"
                app:cardCornerRadius="@dimen/define_dimen_10">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_play_all"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_no_image"
                        android:scaleType="centerCrop"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="@dimen/define_dimen_10"
                        android:gravity="center"
                        tools:ignore="UseCompoundDrawables">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/play_all"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_normal"
                            android:layout_marginEnd="@dimen/define_dimen_5"
                            android:textAllCaps="true"/>

                        <ImageView
                            android:layout_width="@dimen/define_dimen_40"
                            android:layout_height="@dimen/define_dimen_40"
                            android:src="@drawable/ic_play_all_white"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false"
                android:nestedScrollingEnabled="false"
                android:layout_marginStart="@dimen/define_dimen_10"
                android:layout_marginBottom="@dimen/define_dimen_10" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>