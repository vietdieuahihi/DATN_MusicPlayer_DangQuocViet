<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/nen"
    android:padding="@dimen/define_dimen_20"
    tools:ignore="ContentDescription, UseCompatTextViewDrawableXml, UnusedAttribute">


    <ImageView
        android:layout_width="@dimen/define_dimen_60"
        android:layout_height="@dimen/define_dimen_60"
        android:src="@drawable/ic_avatar_default" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_normal"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_marginTop="@dimen/define_dimen_5"
        android:textColor="@color/textColorPrimary"
        android:text="@string/app_name"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/define_dimen_20"
        android:layout_marginBottom="@dimen/define_dimen_20"
        android:background="@color/black_overlay"/>

    <TextView
        android:id="@+id/tv_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/define_dimen_14"
        android:paddingBottom="@dimen/define_dimen_14"
        android:text="@string/menu_feedback"
        android:drawableTint="@color/textColorPrimary"
        android:textColor="@color/textColorPrimary"
        android:fontFamily="@font/montserrat_medium"
        android:drawableLeft="@drawable/ic_menu_feedback"
        android:drawablePadding="@dimen/define_dimen_10"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/tv_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/define_dimen_14"
        android:paddingBottom="@dimen/define_dimen_14"
        android:text="@string/menu_contact"
        android:fontFamily="@font/montserrat_medium"
        android:drawableTint="@color/textColorPrimary"
        android:textColor="@color/textColorPrimary"
        android:drawableLeft="@drawable/ic_menu_contact"
        android:drawablePadding="@dimen/define_dimen_10"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/tv_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/define_dimen_14"
        android:paddingBottom="@dimen/define_dimen_14"
        android:text="@string/menu_change_password"
        android:fontFamily="@font/montserrat_medium"
        android:drawableTint="@color/textColorPrimary"
        android:textColor="@color/textColorPrimary"
        android:drawableLeft="@drawable/ic_menu_change_password"
        android:drawablePadding="@dimen/define_dimen_10"
        android:textSize="@dimen/text_size_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/define_dimen_14"
            android:paddingBottom="@dimen/define_dimen_14"
            android:text="@string/language"
            android:fontFamily="@font/montserrat_medium"
            android:drawableTint="@color/textColorPrimary"
            android:textColor="@color/textColorPrimary"
            android:drawableLeft="@drawable/ic_language_black"
            android:drawablePadding="@dimen/define_dimen_10"
            android:textSize="@dimen/text_size_small" />

        <ImageView
            android:id="@+id/lang_vietnamese"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_flag_vietnam"
            android:layout_marginLeft="@dimen/define_dimen_20"/>
        <ImageView
            android:id="@+id/lang_english"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_flag_england"
            android:layout_marginHorizontal="@dimen/define_dimen_5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/define_dimen_14"
            android:paddingBottom="@dimen/define_dimen_14"
            android:text="@string/mode"
            android:fontFamily="@font/montserrat_medium"
            android:drawableTint="@color/textColorPrimary"
            android:textColor="@color/textColorPrimary"
            android:drawableLeft="@drawable/ic_dark_mode"
            android:drawablePadding="@dimen/define_dimen_10"
            android:textSize="@dimen/text_size_small" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/mode_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:thumbTint="@color/light_blue_600"
            android:layout_marginLeft="@dimen/define_dimen_20"/>
    </LinearLayout>

    <Button
        android:id="@+id/tv_sign_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/define_dimen_14"
        android:paddingBottom="@dimen/define_dimen_14"
        android:text="@string/menu_sign_out"
        android:drawableTint="@color/textColorPrimary"
        android:drawablePadding="@dimen/define_dimen_10"
        android:background="@drawable/gradient_test"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_small" />
<!--        android:drawableLeft="@drawable/ic_menu_sign_out"-->

</LinearLayout>
