<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/nen">

    <RelativeLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/define_dimen_10"
        android:layout_marginTop="@dimen/define_dimen_10"
        android:layout_marginEnd="@dimen/define_dimen_10"
        android:background="@color/white">

        <EditText
            android:id="@+id/edt_search_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_shape_border_red_corner_8"
            android:hint="@string/hint_search_name"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:padding="@dimen/define_dimen_12"
            android:textColor="#07112a"
            android:textSize="@dimen/text_size_xsmall"
            tools:ignore="Autofill" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/define_dimen_35"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/img_search"
            android:background="@color/red" />

        <ImageView
            android:id="@+id/img_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/define_dimen_5"
            android:padding="@dimen/define_dimen_5"
            android:src="@drawable/ic_search_red"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <TextView
        android:id="@+id/noti_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="@string/noti_search"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/define_dimen_20"
        android:visibility="gone"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/layout_play_all"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_margin="@dimen/define_dimen_10"
                android:layout_height="@dimen/define_dimen_130"
                app:cardCornerRadius="@dimen/define_dimen_10">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_play_all"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_no_image"
                        android:scaleType="centerCrop"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="@dimen/define_dimen_10"
                        android:gravity="center"
                        tools:ignore="UseCompoundDrawables">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/play_all"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_normal"
                            android:layout_marginEnd="@dimen/define_dimen_5"
                            android:textAllCaps="true"/>

                        <ImageView
                            android:layout_width="@dimen/define_dimen_40"
                            android:layout_height="@dimen/define_dimen_40"
                            android:src="@drawable/ic_play_all_white"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false"
                android:nestedScrollingEnabled="false"
                android:layout_marginStart="@dimen/define_dimen_10"
                android:layout_marginBottom="@dimen/define_dimen_10" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>